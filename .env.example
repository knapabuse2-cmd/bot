# ============================================
# Telegram Outreach System - Environment Config
# ============================================
# Copy this file to .env and fill in your values

# Application
APP_NAME=telegram-outreach-system
DEBUG=false
ENVIRONMENT=development

# ============================================
# DATABASE (PostgreSQL)
# ============================================
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_secure_password
DB_DATABASE=outreach
DB_POOL_SIZE=10
DB_ECHO=false

# ============================================
# REDIS
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_QUEUE_DB=1

# ============================================
# TELEGRAM
# ============================================
# Get these from https://my.telegram.org/apps
TELEGRAM_API_ID=12345678
TELEGRAM_API_HASH=your_api_hash_here

# Create bot via @BotFather
TELEGRAM_ADMIN_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz

# Comma-separated list of admin Telegram user IDs
TELEGRAM_ADMIN_USER_IDS=123456789,987654321

# ============================================
# OPENAI
# ============================================
OPENAI_API_KEY=sk-your-openai-key-here
OPENAI_DEFAULT_MODEL=gpt-4o-mini
OPENAI_FALLBACK_MODEL=gpt-4o-mini
OPENAI_DEFAULT_TEMPERATURE=0.7
OPENAI_DEFAULT_MAX_TOKENS=500

# ============================================
# WORKER
# ============================================
WORKER_MAX_CONCURRENT_ACCOUNTS=50
WORKER_MESSAGE_CHECK_INTERVAL=5.0
WORKER_HEALTH_CHECK_INTERVAL=60.0

# ============================================
# SECURITY
# ============================================
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
SECURITY_SESSION_ENCRYPTION_KEY=your_fernet_key_here

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=INFO
LOG_FORMAT=json
